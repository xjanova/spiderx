<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpiderX.App.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- SpiderX Theme Colors -->
            <Color x:Key="SpiderPrimary">#6366F1</Color>
            <Color x:Key="SpiderSecondary">#8B5CF6</Color>
            <Color x:Key="SpiderAccent">#22D3EE</Color>
            <Color x:Key="SpiderBackground">#0F172A</Color>
            <Color x:Key="SpiderSurface">#1E293B</Color>
            <Color x:Key="SpiderText">#F8FAFC</Color>
            <Color x:Key="SpiderTextSecondary">#94A3B8</Color>
            <Color x:Key="SpiderOnline">#22C55E</Color>
            <Color x:Key="SpiderOffline">#EF4444</Color>

        </ResourceDictionary>
    </Application.Resources>
</Application>
