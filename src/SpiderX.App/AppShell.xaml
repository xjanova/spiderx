<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SpiderX.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SpiderX.App.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="True"
    Shell.TabBarBackgroundColor="{StaticResource SpiderSurface}"
    Shell.TabBarTitleColor="{StaticResource SpiderText}"
    Shell.TabBarUnselectedColor="{StaticResource SpiderTextSecondary}">

    <TabBar>
        <ShellContent
            Title="Home"
            Route="Home"
            ContentTemplate="{DataTemplate views:DashboardPage}"
            Icon="home_icon.png" />

        <ShellContent
            Title="Chats"
            Route="Chats"
            ContentTemplate="{DataTemplate views:MainPage}"
            Icon="chat_icon.png" />

        <ShellContent
            Title="Nearby"
            Route="Nearby"
            ContentTemplate="{DataTemplate views:NearbyDiscoveryPage}"
            Icon="radar_icon.png" />

        <ShellContent
            Title="Files"
            Route="Files"
            ContentTemplate="{DataTemplate views:FileSharingPage}"
            Icon="files_icon.png" />

        <ShellContent
            Title="Settings"
            Route="Settings"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Icon="settings_icon.png" />
    </TabBar>

    <!-- Chat Detail Route -->
    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid>
                <Label Text="{Binding Title}" />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

</Shell>
