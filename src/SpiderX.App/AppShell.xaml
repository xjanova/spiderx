<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SpiderX.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SpiderX.App.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="True"
    Shell.TabBarBackgroundColor="{StaticResource SpiderSurface}"
    Shell.TabBarTitleColor="{StaticResource SpiderText}"
    Shell.TabBarUnselectedColor="{StaticResource SpiderTextSecondary}">

    <TabBar>
        <ShellContent
            Title="Chats"
            ContentTemplate="{DataTemplate views:MainPage}"
            Icon="chat_icon.png" />

        <ShellContent
            Title="Contacts"
            ContentTemplate="{DataTemplate views:ContactsPage}"
            Icon="contacts_icon.png" />

        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Icon="settings_icon.png" />
    </TabBar>

    <!-- Chat Detail Route -->
    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid>
                <Label Text="{Binding Title}" />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

</Shell>
