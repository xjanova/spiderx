<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- SpiderX Brand Colors -->
    <Color x:Key="SpiderPrimary">#6366F1</Color>
    <Color x:Key="SpiderPrimaryDark">#4F46E5</Color>
    <Color x:Key="SpiderSecondary">#8B5CF6</Color>
    <Color x:Key="SpiderAccent">#22D3EE</Color>

    <!-- Background Colors -->
    <Color x:Key="SpiderBackground">#0F172A</Color>
    <Color x:Key="SpiderSurface">#1E293B</Color>
    <Color x:Key="SpiderSurfaceLight">#334155</Color>

    <!-- Text Colors -->
    <Color x:Key="SpiderText">#F8FAFC</Color>
    <Color x:Key="SpiderTextSecondary">#94A3B8</Color>
    <Color x:Key="SpiderTextMuted">#64748B</Color>

    <!-- Status Colors -->
    <Color x:Key="SpiderOnline">#22C55E</Color>
    <Color x:Key="SpiderOffline">#EF4444</Color>
    <Color x:Key="SpiderWarning">#F59E0B</Color>
    <Color x:Key="SpiderInfo">#3B82F6</Color>

    <!-- System Colors -->
    <Color x:Key="Primary">#6366F1</Color>
    <Color x:Key="PrimaryDark">#4F46E5</Color>
    <Color x:Key="PrimaryDarkText">White</Color>
    <Color x:Key="Secondary">#8B5CF6</Color>
    <Color x:Key="SecondaryDarkText">White</Color>
    <Color x:Key="Tertiary">#22D3EE</Color>
    <Color x:Key="TertiaryDarkText">Black</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

</ResourceDictionary>
