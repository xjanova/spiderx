<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- SpiderX Brand Colors - Cyberpunk/Neon Theme -->
    <Color x:Key="SpiderPrimary">#7C3AED</Color>
    <Color x:Key="SpiderPrimaryLight">#A78BFA</Color>
    <Color x:Key="SpiderPrimaryDark">#5B21B6</Color>
    <Color x:Key="SpiderSecondary">#EC4899</Color>
    <Color x:Key="SpiderSecondaryLight">#F472B6</Color>
    <Color x:Key="SpiderAccent">#06B6D4</Color>
    <Color x:Key="SpiderAccentLight">#22D3EE</Color>
    <Color x:Key="SpiderNeon">#00FF88</Color>
    <Color x:Key="SpiderNeonPink">#FF00FF</Color>
    <Color x:Key="SpiderNeonBlue">#00FFFF</Color>

    <!-- Background Colors - Deep Dark with Blue Tint -->
    <Color x:Key="SpiderBackground">#0A0A1A</Color>
    <Color x:Key="SpiderBackgroundAlt">#0D0D24</Color>
    <Color x:Key="SpiderSurface">#12122A</Color>
    <Color x:Key="SpiderSurfaceLight">#1A1A3A</Color>
    <Color x:Key="SpiderSurfaceElevated">#222244</Color>
    <Color x:Key="SpiderCard">#161630</Color>
    <Color x:Key="SpiderCardHover">#1E1E42</Color>

    <!-- Gradient Colors -->
    <Color x:Key="GradientStart">#7C3AED</Color>
    <Color x:Key="GradientMiddle">#EC4899</Color>
    <Color x:Key="GradientEnd">#06B6D4</Color>

    <!-- Glass Effect Colors -->
    <Color x:Key="GlassBackground">#20FFFFFF</Color>
    <Color x:Key="GlassBorder">#40FFFFFF</Color>
    <Color x:Key="GlassHighlight">#60FFFFFF</Color>

    <!-- Text Colors -->
    <Color x:Key="SpiderText">#FFFFFF</Color>
    <Color x:Key="SpiderTextSecondary">#A1A1C7</Color>
    <Color x:Key="SpiderTextMuted">#6B6B8D</Color>
    <Color x:Key="SpiderTextAccent">#A78BFA</Color>

    <!-- Status Colors - Neon Style -->
    <Color x:Key="SpiderOnline">#00FF88</Color>
    <Color x:Key="SpiderOnlineGlow">#40FF88</Color>
    <Color x:Key="SpiderOffline">#FF4757</Color>
    <Color x:Key="SpiderOfflineGlow">#FF6B7A</Color>
    <Color x:Key="SpiderWarning">#FFD93D</Color>
    <Color x:Key="SpiderInfo">#4DABF7</Color>
    <Color x:Key="SpiderSuccess">#51CF66</Color>
    <Color x:Key="SpiderError">#FF6B6B</Color>

    <!-- Button Colors -->
    <Color x:Key="ButtonPrimary">#7C3AED</Color>
    <Color x:Key="ButtonPrimaryHover">#8B5CF6</Color>
    <Color x:Key="ButtonSecondary">#EC4899</Color>
    <Color x:Key="ButtonDanger">#EF4444</Color>
    <Color x:Key="ButtonSuccess">#22C55E</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderDefault">#2A2A4A</Color>
    <Color x:Key="BorderLight">#3A3A5A</Color>
    <Color x:Key="BorderAccent">#7C3AED</Color>
    <Color x:Key="BorderGlow">#A78BFA</Color>

    <!-- Shadow Colors -->
    <Color x:Key="ShadowPrimary">#407C3AED</Color>
    <Color x:Key="ShadowSecondary">#40EC4899</Color>
    <Color x:Key="ShadowDark">#80000000</Color>

    <!-- System Colors -->
    <Color x:Key="Primary">#7C3AED</Color>
    <Color x:Key="PrimaryDark">#5B21B6</Color>
    <Color x:Key="PrimaryDarkText">White</Color>
    <Color x:Key="Secondary">#EC4899</Color>
    <Color x:Key="SecondaryDarkText">White</Color>
    <Color x:Key="Tertiary">#06B6D4</Color>
    <Color x:Key="TertiaryDarkText">Black</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

</ResourceDictionary>
